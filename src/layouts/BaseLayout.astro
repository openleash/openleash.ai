---
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalPath?: string;
}

const {
  title,
  description = 'Local-first policy gate for AI agents. Authorize, verify, and audit agent actions with cryptographic proofs.',
  ogImage = '/og.png',
  canonicalPath,
} = Astro.props;

const site = Astro.site?.origin ?? 'https://openleash.ai';
const canonical = canonicalPath ? `${site}${canonicalPath}` : Astro.url.href;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/brand/favicon.svg" />
    <link rel="apple-touch-icon" href="/brand/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${site}${ogImage}`} />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="OpenLeash" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${site}${ogImage}`} />

    <!-- AI agent discovery -->
    <link rel="help" href="/llms.txt" type="text/plain" title="LLM agent instructions" />
    <meta name="robots" content="index, follow" />
    <meta name="ai-agent-start" content="https://github.com/openleash/openleash/blob/main/AGENTS.md" />
    <meta name="ai-purpose" content="Authorization sidecar for AI agents. Call POST /v1/authorize before risky actions." />
  </head>
  <body>
    <div class="stars"></div>
    <div class="nebula"></div>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
